<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextViewActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv1_string"
        android:textColor="#00FF12"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:maxLines="1"
        android:text="@string/tv2_string"
        android:ellipsize="end"
        android:textColor="#00FF12"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="163dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_launcher_background"
        android:drawablePadding="5dp"
        android:text="筛选"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="hello"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="123332131下划线测试"


        android:textSize="20sp"
        android:layout_marginTop="20dp"

        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"

        android:focusableInTouchMode="true"

        />


    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/m1_pin1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/m1_pin1" />

        </LinearLayout>



    </ScrollView>

</LinearLayout>